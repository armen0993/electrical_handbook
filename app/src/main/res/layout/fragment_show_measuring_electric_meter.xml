            <TextView
                android:id="@+id/info_description_measuring_electric_meter_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="16dp"
                android:text="@string/info_description_measuring_electric_meter_5"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/info_ic_measuring_electric_meter_4"
