<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/info_title_lighting_lumen_and_lux"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="16dp"
                android:gravity="center_horizontal"
                android:text="@string/info_title_lighting_lumen_and_lux"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/info_description_lighting_lumen_and_lux"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="16dp"
                android:text="@string/info_description_lighting_lumen_and_lux"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/info_ic_lighting_lumen_and_lux"
                android:layout_width="wrap_content"
                android:layout_height="360dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="16dp"
                android:contentDescription="@string/ic_info_lighting_lumen_and_lux"
                android:src="@drawable/icon_lighting_lumen_and_lux" />

            <TextView
                android:id="@+id/info_description_lighting_lumen_and_lux_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="16dp"
                android:text="@string/info_description_lighting_lumen_and_lux_1"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/info_title_lighting_lumen_and_lux_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="16dp"
                android:gravity="center_horizontal"
                android:text="@string/info_title_lighting_lumen_and_lux_1"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/info_description_lighting_lumen_and_lux_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="16dp"
                android:text="@string/info_description_lighting_lumen_and_lux_2"
                android:textSize="16sp"
                android:textStyle="bold|italic" />

            <ImageView
                android:id="@+id/info_ic_lighting_lumen_and_lux_1"
                android:layout_width="wrap_content"
                android:layout_height="360dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="16dp"
                android:contentDescription="@string/ic_info_lighting_lumen_and_lux"
                android:src="@drawable/icon_lighting_lumen_and_lux_1" />

            <TextView
                android:id="@+id/info_description_lighting_lumen_and_lux_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="16dp"
                android:text="@string/info_description_lighting_lumen_and_lux_3"
                android:textSize="16sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/info_title_lighting_lumen_and_lux_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="16dp"
                android:gravity="center_horizontal"
                android:text="@string/info_title_lighting_lumen_and_lux_2"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/info_description_lighting_lumen_and_lux_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="16dp"
                android:text="@string/info_description_lighting_lumen_and_lux_4"
                android:textSize="16sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/info_title_lighting_lumen_and_lux_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="16dp"
                android:gravity="center_horizontal"
                android:text="@string/info_title_lighting_lumen_and_lux_3"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/info_ic_lighting_lumen_and_lux_2"
                android:layout_width="wrap_content"
                android:layout_height="360dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="16dp"
                android:contentDescription="@string/ic_info_lighting_lumen_and_lux"
                android:src="@drawable/icon_lighting_lumen_and_lux_2" />

            <TextView
                android:id="@+id/info_description_lighting_lumen_and_lux_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:text="@string/info_description_lighting_lumen_and_lux_5"
                android:textSize="16sp"
                android:textStyle="bold|italic" />


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>