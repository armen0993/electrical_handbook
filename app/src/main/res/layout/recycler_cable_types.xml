<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="8dp"
    app:cardCornerRadius="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title_cable_types"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:textColor="@color/backgroundBrown"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_icon_cable_types"
            android:layout_width="360dp"
            android:layout_height="240dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/ic_cable_types"
            app:layout_constraintEnd_toEndOf="@id/title_cable_types"
            app:layout_constraintStart_toStartOf="@id/title_cable_types"
            app:layout_constraintTop_toBottomOf="@id/title_cable_types" />

        <TextView
            android:id="@+id/description_cable_types"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:paddingBottom="8dp"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/img_icon_cable_types"
            app:layout_constraintStart_toStartOf="@id/img_icon_cable_types"
            app:layout_constraintTop_toBottomOf="@id/img_icon_cable_types" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>