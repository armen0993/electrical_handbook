<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".installation_of_wiring_in_house.InstallationOfWiringInHouseActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="UseCompoundDrawables">

            <TextView
                android:id="@+id/info_title_wiring_in_house"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="16dp"
                android:gravity="center_horizontal"
                android:text="@string/info_title_wiring_in_house"
                android:textSize="16sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/info_description_wiring_in_house"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="16dp"
                android:text="@string/info_description_wiring_in_house"
                android:textSize="16sp" />
            <ImageView
                android:id="@+id/info_ic_wiring_in_house"
                android:layout_width="360dp"
                android:layout_height="240dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:contentDescription="@string/ic_info_wiring_in_house"
                android:src="@drawable/ic_info_wiring_in_house" />
            <TextView
                android:id="@+id/info_title_wiring_in_house_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="16dp"
                android:gravity="center_horizontal"
                android:text="@string/info_title_wiring_in_house_1"
                android:textSize="16sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/info_description_wiring_in_house_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="16dp"
                android:text="@string/info_description_wiring_in_house_1"
                android:textSize="16sp" />
            <ImageView
                android:id="@+id/info_ic_wiring_in_house_1"
                android:layout_width="wrap_content"
                android:layout_height="320dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="8dp"
                android:contentDescription="@string/ic_info_wiring_in_house"
                android:src="@drawable/ic_info_wiring_in_house_1" />
            <ImageView
                android:id="@+id/info_ic_wiring_in_house_2"
                android:layout_width="wrap_content"
                android:layout_height="320dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="8dp"
                android:contentDescription="@string/ic_info_wiring_in_house"
                android:src="@drawable/ic_info_wiring_in_house_2" />
            <TextView
                android:id="@+id/info_description_wiring_in_house_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="16dp"
                android:text="@string/info_description_wiring_in_house_2"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/info_title_wiring_in_house_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="16dp"
                android:gravity="center_horizontal"
                android:text="@string/info_title_wiring_in_house_2"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/info_ic_wiring_in_house_3"
                android:layout_width="wrap_content"
                android:layout_height="240dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="8dp"
                android:contentDescription="@string/ic_info_wiring_in_house"
                android:src="@drawable/ic_info_wiring_in_house_3" />


            <TextView
                android:id="@+id/info_description_wiring_in_house_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="16dp"
                android:text="@string/info_description_wiring_in_house_3"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/info_title_wiring_in_house_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="16dp"
                android:gravity="center_horizontal"
                android:text="@string/info_title_wiring_in_house_3"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/info_ic_wiring_in_house_4"
                android:layout_width="wrap_content"
                android:layout_height="240dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="8dp"
                android:contentDescription="@string/ic_info_wiring_in_house"
                android:src="@drawable/ic_info_wiring_in_house_4" />


            <TextView
                android:id="@+id/info_description_wiring_in_house_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="16dp"
                android:text="@string/info_description_wiring_in_house_4"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/info_title_wiring_in_house_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="16dp"
                android:gravity="center_horizontal"
                android:text="@string/info_title_wiring_in_house_4"
                android:textSize="16sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/info_description_wiring_in_house_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:text="@string/info_description_wiring_in_house_5"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>